@model WebApplication_SRPFIQ.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Créer un compte";
    Layout = null;
}
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Login</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

</head>


<body class="bg-gradient-primary">
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Créer un compte</h1>
                            </div>

                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "user" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-control-user", placeholder = "Prénom" })
                                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger small" })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-user", placeholder = "Nom" })
                                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger small" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user", type = "email", placeholder = "Adresse e-mail" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-user", placeholder = "Mot de passe" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-user", placeholder = "Confirmer le mot de passe" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.DropDownListFor(m => m.SelectedRole, Model.Roles, "Sélectionner un rôle", new { @class = "form-control form-control-user", placeholder = "Selectionnez le role" })
                                    @Html.ValidationMessageFor(m => m.SelectedRole, "", new { @class = "text-danger small" })
                                </div>

                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Créer un compte
                                </button>
                            }

                            <hr>
                            <div class="text-center">
                                <a class="small" href="#">Mot de passe oublié ?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/Account/Login">Vous avez déjà un compte ? Se connecter</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>



    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }


    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
</body>
