@* modal form *@

<input type="hidden" name="IdQuestionnaire" id="modal-id-questionnaire" />

<div class="modal fade" id="addQuestionModal" tabindex="-1" role="dialog" aria-labelledby="addQuestionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form asp-controller="QuestionnaireQuestions" asp-action="Create" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addQuestionModalLabel">Nouvelle Question</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="IdQuestionnaire" value="@Model.ID" />

                    <div class="form-group">
                        <label>Ordre</label>
                        <input name="Order" class="form-control" type="number" />
                    </div>

                    <div class="form-group">
                        <label>Nom</label>
                        <input name="Name" class="form-control" />
                    </div>

                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" name="Active" checked />
                        <label class="form-check-label">Actif</label>
                    </div>

                    <div class="form-group">
                        <label>Titre</label>
                        <input name="Title" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Titre court</label>
                        <input name="ShortTitle" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Instructions</label>
                        <input name="Instructions" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>ID Type de donnée principale</label>
                        <input name="IdMainDataType" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>ID Source Principale</label>
                        <input name="IdMainDataSource" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>ID Type de donnée secondaire</label>
                        <input name="IdSubDataType" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>ID Source secondaire</label>
                        <input name="IdSubDataSource" class="form-control" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Créer</button>
                </div>
            </form>
        </div>
    </div>
</div>
