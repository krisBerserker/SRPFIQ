@model WebApplication_SRPFIQ.ViewModels.MedicalNotesViewModel

@{
    ViewData["Title"] = "Medical";
    bool lectureSeule = Model.Mode == "Affichage";
    string title = (lectureSeule ? $"Intervention médicale {Model.ID}" : "Ajout d'une intervention médicale");
}

<h1>@title</h1>


<form asp-action="Create" method="post">
    <input type="hidden" asp-for="Mode" />
    <input type="hidden" asp-for="IDRequest" />
    <div class="row mb-3">
        <div class="col-md-3">
            <label for="Date" class="form-label">Date</label>
            <div class="input-group">
                <input asp-for="Date" type="date" class="form-control" readonly="@lectureSeule" />
                <span class="input-group-text"><i class="bi bi-calendar"></i></span>
            </div>
        </div>
        <div class="col-md-5">
            <label for="Heure" class="form-label">Heure</label>
            <input asp-for="Heure" type="time" class="form-control" readonly="@lectureSeule" />
        </div>
    </div>

    <div class="mb-3>
        <label for="Intervention" class="form-label">Intervention</label>
        <textarea asp-for="Intervention" class="form-control" rows="3" readonly="@lectureSeule"></textarea>
    </div>

    <div class="mb-3">
        <label for="Notes" class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control" rows="3" readonly="@lectureSeule"></textarea>
    </div>

    @if (!lectureSeule)
    {
        <button type="submit" class="btn btn-outline-dark">Sauvegarder</button>
    }
</form>


