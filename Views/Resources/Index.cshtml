@model WebApplication_SRPFIQ.ViewModel.ResourceSearchViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des Ressources </h1>

<p>
    <a asp-action="Create">Ajouter une ressource</a>
</p>

<form method="get" asp-action="Index" class="mb-3">
    <label>Service</label>
    @Html.DropDownListFor(m => m.SelectedCategorieId, Model.Categories, "Tous", new { @class = "form-control" })

    <label>Quartier</label>
    @Html.DropDownListFor(m => m.SelectedCityId, Model.Cities, "Tous", new { @class = "form-control" })

    <label>Autobus</label>
    <input type="text" name="SelectedBus" value="@Model.SelectedBus" class="form-control" />

    <button type="submit" class="btn btn-primary mt-2">Rechercher</button>
</form>
@{
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

<!-- Pagination -->
@if (totalPages > 1)
{
    <nav aria-label="Pagination">
        <ul class="pagination">
            @* Bouton précédent *@
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new {
                    SelectedCategorieId = Model.SelectedCategorieId,
                    SelectedCityId = Model.SelectedCityId,
                    SelectedBus = Model.SelectedBus,
                    pageNumber = currentPage - 1,
                })">Précédent</a>
            </li>

            @* Quelques pages autour de la page actuelle *@
            @{
                int start = Math.Max(1, currentPage - 2);
                int end = Math.Min(totalPages, currentPage + 2);
            }
            @for (int i = start; i <= end; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new {
                        SelectedCategorieId = Model.SelectedCategorieId,
                        SelectedCityId = Model.SelectedCityId,
                        SelectedBus = Model.SelectedBus,
                        pageNumber = i,
                    })">@i</a>
                </li>
            }

            @* Bouton suivant *@
            <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new {
                    SelectedCategorieId = Model.SelectedCategorieId,
                    SelectedCityId = Model.SelectedCityId,
                    SelectedBus = Model.SelectedBus,
                    pageNumber = currentPage + 1,
                })">Suivant</a>
            </li>
        </ul>
    </nav>

}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Telephone</th>
            <th>Quartier</th>
            <th>Adresse</th>
            <th>Horaire</th>
            <th>Autobus</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Resultats) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResourceCity.Name)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
                <td>
                    @foreach (var h in item.ResourceBusinessHours?.OrderBy(h => h.DayOfWeek) ?? Enumerable.Empty<ResourceBusinessHours>())
                    {
                        <div>
                            @h.DayOfWeek : @h.OpeningTime.ToString(@"hh\:mm") - @h.ClosingTime.ToString(@"hh\:mm")
                        </div>
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusNearBy)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
